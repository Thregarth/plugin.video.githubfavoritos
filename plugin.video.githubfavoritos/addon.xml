<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.githubfavoritos" name="GitHub Favoritos" version="1.0.0" provider-name="TuNombre">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
	<extension point="kodi.context.item">
		<menu id="kodi.core.main">
			<item library="default.py">
				<label>Guardar en GitHub</label>
				<visible>True</visible>
			</item>
		</menu>
	</extension>
    <extension point="xbmc.python.pluginsource" library="listado.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Guardar un acceso directo del contenido seleccionado en GitHub</summary>
        <description>Este addon añade una opción en el menú contextual para guardar un acceso directo del contenido seleccionado en un repositorio de GitHub.</description>
        <platform>all</platform>
    </extension>
</addon>
